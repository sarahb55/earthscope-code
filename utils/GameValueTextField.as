package earthscope.utils{		import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;	import flash.text.StyleSheet;	import flash.events.MouseEvent;	import flash.text.TextFieldAutoSize;	import flash.display.Shape;	import flash.filters.DropShadowFilter;	import flash.geom.ColorTransform;	import earthscope.text.GameText;	import flash.text.Font;	import flash.text.AntiAliasType;		public class GameValueTextField extends Sprite{				private var _value:String;		private var _sprite:Sprite = new Sprite();		private var _textf:TextField = new TextField();		var _format:TextFormat = new TextFormat();		var myFont:Font = new cancan();		var wingFont:Font = new Wingdings2();		var webFont:Font = new wingdings();						public function GameValueTextField(val:String){						_value = val;			_textf.text = val;			addChild(_textf);			formatText(GameText.FONT);			trace(wingFont.fontName);					}						public function set fontName(fn:String){			formatText(fn);		}				public function formatText(fontName:String):void{											_textf.autoSize = TextFieldAutoSize.LEFT;			_textf.selectable = false;						_format.align = TextFieldAutoSize.LEFT;			_format.font = fontName;           	_textf.embedFonts = true;						_format.color = GameText.RED;            _format.size = 20;					_format.bold = true;						_textf.defaultTextFormat = _format;				_textf.text = _value;						_textf.filters = null;																		}									}				}