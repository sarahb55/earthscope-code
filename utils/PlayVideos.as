package earthscope.utils{		import flash.net.NetConnection;	import flash.net.NetStream;	import flash.media.Video;	import flash.display.Sprite;		public class PlayVideos extends Sprite{				var _fileName:String;		var _videoConnection:NetConnection;		var _videoStream:NetStream;		var _video:Video;		var _pause:Boolean = false;		public function PlayVideos(){				}		public function initPlayer(x:Number = 0, y:Number = 0, width:Number = 0, height:Number = 0){				_videoConnection = new NetConnection();		_videoConnection.connect(null);		_videoStream = new NetStream(_videoConnection);		if(width <= 0 && height <=0){						_video = new Video();					}		else{						_video = new Video();			_video.width = width;			_video.height = height;		}		_video.attachNetStream(_videoStream);		_video.x = x;		_video.y = y;							}			public function play(file:String){				try{		_video.clear();		_videoStream.play(file);		var client:Object = new Object();		client.onMetaData = onMetaData;		_videoStream.client = client;		_video.attachNetStream(_videoStream);		addChild(_video);		}		catch(e:Error){								}			}		public function pause(){				if(!_pause){			_videoStream.pause();		}		else{			_videoStream.resume();		}		_pause = !_pause;	}		public function stop(){				_videoStream.close();	}		public function clear(){				_video.clear();		removeChild(_video);	}		private function onMetaData(data:Object):void{				trace(data.duration);			}			}						}