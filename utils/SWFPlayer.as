package earthscope.utils{		import flash.display.*;	import flash.net.URLRequest;	import flash.net.URLLoader;	import flash.events.Event;					public class SWFPlayer extends Sprite{				private var _loader:Loader;		var _movie:*;				public function SWFPlayer(){						_loader = new Loader();			addChild(_loader);			_loader.contentLoaderInfo.addEventListener(Event.INIT, handleInit);								}						public function loadFile(file:String){									_loader.load(new URLRequest(file));		}						private function handleInit(event:Event):void{									try{				_movie = MovieClip(_loader.content); // cast 'DisplayObject' to 'MovieClip'				addChild(_movie); // add your swf directly to the stage				_movie.gotoAndPlay("start"); // Now you can use all MovieClip methods!				stop();			}			catch(e:Error){								trace(e.toString());			}					}				public function play(){						_movie.play();		}				public function stop(){									_movie.gotoAndStop(_movie.totalFrames);		}											}						}