package earthscope.utils{		import flash.media.Sound;	import flash.media.SoundChannel;	import flash.net.URLRequest;	import flash.media.SoundLoaderContext;	import flash.media.SoundTransform;			public class SoundPlayer{				private var _file:String;		private var _sound:Sound ;		private var _channel:SoundChannel = null;		private var _pausePosition:int = 0;		private var _transform:SoundTransform;				public function SoundPlayer(){								}				public function loadSound(file:String){						if(file != null){				_sound = new Sound(new URLRequest(file));				_file = file;				_pausePosition = 0;			}		}				public function play(start:int = 0, loop:int = 1){						if(_channel == null){				loadSound(_file);				_channel = _sound.play(start, loop);			}			else{				resume();			}		}				public function pause(){						if(_channel != null){				_pausePosition = _channel.position;				_channel.stop();			}					}				public function resume(){						if(_sound != null){				_channel = _sound.play(_pausePosition);			}					}						public function stop(){						if(_channel != null){				_channel.stop();				_channel = null;			}		}				public function lowerSound(amount:Number=0.5){						_transform = new SoundTransform();			_transform.volume = amount;			_channel.soundTransform = _transform;					}					}							}