package earthscope.views{		import earthscope.controller.GameEngine;import earthscope.utils.AlertBox;import earthscope.models.VolcanoData;import earthscope.models.MonitorData;import earthscope.events.VolcanoEruptsEvent;import earthscope.utils.SeismoGraph;import earthscope.utils.GPSMonitor;import earthscope.utils.GameButtonMayor;import earthscope.utils.DisplayGraphicsFiles;import earthscope.text.GameText;import flash.display.Sprite;import flash.events.MouseEvent;import earthscope.utils.PlayVideos;import earthscope.utils.GameButton;import earthscope.utils.DisplayGraphicsFiles;import earthscope.utils.GameTextField;import flash.utils.Timer;import flash.events.TimerEvent;import earthscope.views.VolcanoView;import earthscope.utils.SoundPlayer;		public class EvacuationScreenView  extends Sprite{				private var _game:GameEngine;		private var _volcanoView:VolcanoView;		private var _back:DisplayGraphicsFiles;		private var _boat1:DisplayGraphicsFiles;		private var _boat2:DisplayGraphicsFiles;		private var _boat3:DisplayGraphicsFiles;		private var _boat4:DisplayGraphicsFiles;		private var _boat5:DisplayGraphicsFiles;		private var _lowerBorder:DisplayGraphicsFiles;		private var _monitor:MonitorData;		private var _doneBtn:GameButtonMayor;		private var _message:GameTextField;		private var _player;		private var _timer:Timer;		var _play:SoundPlayer;				private var i = -1;		public function EvacuationScreenView(game:GameEngine, volcanoView:VolcanoView){						_game = game;									_back = new DisplayGraphicsFiles() ;			_back.loadFile(GameText.PICTURE_DIRECTORY + GameText.EVACUATION_BACKGROUND);			addChild(_back);						_back.x = GameText.BACK_X;			_back.y = GameText.BACK_Y;						_boat1 = new DisplayGraphicsFiles();				_boat1.loadFile(GameText.PICTURE_DIRECTORY + GameText.EVACUATION_BOAT, true);			addChild(_boat1);			_boat1.x = 155;			_boat1.y = 257;			_boat2 = new DisplayGraphicsFiles();			_boat2.loadFile(GameText.PICTURE_DIRECTORY + GameText.EVACUATION_BOAT, true);			addChild(_boat2);			_boat2.x = 660;			_boat2.y = 266;			_boat3 = new DisplayGraphicsFiles();			_boat3.loadFile(GameText.PICTURE_DIRECTORY + GameText.EVACUATION_BOAT, true);			addChild(_boat3);			_boat3.x = 360;			_boat3.y = 246;									_doneBtn = new GameButtonMayor(420, 470, 165, 60, GameText.DONE_BTN);			_doneBtn.addEventListener(MouseEvent.CLICK, onDone);									_timer = new Timer(200, 1000);			_timer.addEventListener(TimerEvent.TIMER, updateGame);						_message = new GameTextField(GameText.PLAYER_WINS);			addChild (_message);			_message.x = 420;			_message.y = 100;						_lowerBorder = new DisplayGraphicsFiles();			_lowerBorder.loadFile(GameText.PICTURE_DIRECTORY + GameText.LOWER_BORDER);			_lowerBorder.y = GameText.LOWER_BORDER_Y;			_lowerBorder.x = GameText.LOWER_BORDER_X;			addChild(_lowerBorder);			addChild(_doneBtn);						_play = new SoundPlayer();			_play.loadSound(GameText.SOUNDS_FOLDER + GameText.VOLCANO_WAKESUP);					}				public function onEnterIslandFromADistanceScreen(){						_timer.start();			_play.play();			//_volcanoView.showEruption();		}				public function onExitIslandFromADistanceScreen(){						_timer.stop();					}				private function onDone(MouseEvent):void{						onExitIslandFromADistanceScreen();			_game.onExitIslandFromADistanceScreen();			_game.onEnterFinalScreen();		}				private function updateGame(TimerEvent):void{	 		i = -1*i;	 			_boat1.y += i;			_boat2.y += i;	 		_boat3.y -= i;				 			_boat1.x += i;			_boat2.x -= i;			_boat3.x -= i;									}											}		}