package earthscope.views{		import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.text.TextFormat;	import flash.display.Sprite;	import flash.geom.Rectangle;	import earthscope.text.GameText;	import earthscope.controller.GameEngine;			public class GameEngineView extends Sprite{				var _box:Sprite  = new Sprite();		var _text:TextField;		var _game:GameEngine;		var format:TextFormat  = new TextFormat();		var _rect2:Rectangle;		var _rect:Rectangle;				public function GameEngineView(game:GameEngine){							_game = game;			_text = new TextField();			formatText();						//_text.embedFonts(true);			_box = new Sprite();			addChild(_box);			_rect2 = new Rectangle();			_box.addChild(_text);			//formatRectangle();											} 				public function updateText(val:String){						_text.htmlText = val;					}						public function setPosition(rect:Rectangle){						_rect = rect;			_text.x = _rect.x;			_text.y = _rect.y;			_text.width = _rect.width;			_text.height = _rect.height;					}				private function formatText(){									_text.x = 700;			_text.y = 70;						_text.autoSize = TextFieldAutoSize.LEFT;			_text.selectable = false;									format.align = TextFieldAutoSize.LEFT;			format.font = "Courier New";            format.color = GameText.RED;            format.size = 14;								_text.defaultTextFormat = format;				//_text.text = _game.gameTime();						_text.filters = null;															}				private function formatRectangle(){						             					}																			}					}