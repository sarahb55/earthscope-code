package earthscope.views{		import earthscope.controller.GameEngine;import earthscope.utils.AlertBox;import earthscope.models.MayorData;import earthscope.events.VolcanoEruptsEvent;import earthscope.utils.SeismoGraph;import earthscope.utils.GPSMonitor;import earthscope.utils.GameButton;import earthscope.utils.DisplayGraphicsFiles;import earthscope.utils.SoundPlayer;import earthscope.text.GameText;import flash.events.MouseEvent;import flash.display.Sprite;		public class MayorScreenView  extends Sprite{		var _back:DisplayGraphicsFiles;	var _game:GameEngine;	var _doneBtn:GameButton;	var _player:SoundPlayer;	var _mayors:Array;	var _mayor:MayorData;		public function MayorScreenView(game:GameEngine, mayor:MayorData){				_back = new DisplayGraphicsFiles();		_back.loadFile(GameText.PICTURE_DIRECTORY + GameText.CHOOSE_MAYOR_BACKGROUND);		addChild(_back);		_back.x = GameText.BACK_Y;		_back.y = GameText.BACK_X;				_doneBtn = new GameButton(420, 360, 165, 60, GameText.RANDOM_BTN);		addChild(_doneBtn);		_doneBtn.addEventListener(MouseEvent.CLICK, onMayorComplete);		_game = game;		_mayor = mayor;				_player = new SoundPlayer();				_mayors = new Array();		var file:String = new String();						for(var i:int = 0; i <= 5; i++){						file = GameText.PICTURE_DIRECTORY + GameText.MAYOR_BODY;			var j:Number = i + 1;			file += j.toString() +".png";			trace(file);			_mayors.push(new DisplayGraphicsFiles());			_mayors[i].loadFile(file, true);			addChild(_mayors[i]);			_mayors[i].x = i*100 + 160;			_mayors[i].y = 120;			_mayors[i].scaleX = 0.65;			_mayors[i].scaleY = 0.65;					}				_mayors[0].addEventListener(MouseEvent.CLICK, mayor1);		_mayors[1].addEventListener(MouseEvent.CLICK, mayor2);		_mayors[2].addEventListener(MouseEvent.CLICK, mayor3);		_mayors[3].addEventListener(MouseEvent.CLICK, mayor4);		_mayors[4].addEventListener(MouseEvent.CLICK, mayor5);		_mayors[5].addEventListener(MouseEvent.CLICK, mayor6);			}			private function mayor1(MouseEvent):void{				_mayor.body = 1;		onExitDesignMayorScreen();			}			private function mayor2(MouseEvent):void{				_mayor.body = 2;		onExitDesignMayorScreen();			}			private function mayor3(MouseEvent):void{				_mayor.body = 3;		onExitDesignMayorScreen();			}			private function mayor4(MouseEvent):void{				_mayor.body = 4;		onExitDesignMayorScreen();	}			private function mayor5(MouseEvent):void{				_mayor.body = 5;		onExitDesignMayorScreen();			}			private function mayor6(MouseEvent):void{				_mayor.body = 6;		onExitDesignMayorScreen();			}				private function onExitDesignMayorScreen(){				_player.stop();		_game.onExitDesignMayorScreen();		_game.onEnterGameScreen();			}		public function onEnterDesignMayorScreen(){				_player.loadSound(GameText.SOUNDS_FOLDER + GameText.ISLAND_MUSIC);		_player.play();				//Load Mayor bodies			}		private function onMayorComplete(MouseEvent):void{				onExitDesignMayorScreen();					}		private function cleanUp():void{							}		}}