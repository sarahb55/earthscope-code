package earthscope.views{		import earthscope.controller.GameEngine;import earthscope.utils.AlertBox;import earthscope.models.VolcanoData;import earthscope.models.MonitorData;import earthscope.events.VolcanoEruptsEvent;import earthscope.utils.SeismoGraph;import earthscope.utils.GPSMonitor;import earthscope.utils.GameButton;import earthscope.utils.DisplayGraphicsFiles;import earthscope.text.GameText;import flash.display.Sprite;import flash.events.MouseEvent;import earthscope.utils.PlayVideos;import earthscope.utils.GameButton;import earthscope.utils.DisplayGraphicsFiles;import fl.video.FLVPlayback;		public class MonitorScreenView  extends Sprite{				private var _game:GameEngine;		private var _back:DisplayGraphicsFiles;		private var _monitor:MonitorData;		private var _doneBtn:GameButton;		private var _player;		private var _fpp =FLVPlayback;				public function MonitorScreenView(game:GameEngine, monitor:MonitorData){						_game = game;						//_player = new PlayVideos();			//_player.initPlayer(160,40, 250, 150);			_back = new DisplayGraphicsFiles() ;			_back.loadFile(GameText.PICTURE_DIRECTORY + GameText.MONITOR_ZOOM_BACKGROUND);			addChild(_back);						_fpp =new FLVPlayback();				_fpp.bufferTime = 1000;			_fpp.x = 163;			_fpp.y = 40;						addChild(_fpp);			_fpp.skin = "SkinOverAll.swf"			_fpp.width = 630;			_fpp.height = 360;												_monitor = monitor;						_doneBtn = new GameButton(815, 360, 50, 100, GameText.PREVIOUS_SCREEN);			_doneBtn.addEventListener(MouseEvent.CLICK, onDone);			addChild(_doneBtn);								}				public function onEnterMonitorScreen(){						try{				_fpp.source = GameText.MOVIES_DIRECTORY + _monitor.getVideoFile();			}			catch(e:Error){								_fpp.source  = GameText.SCROLLING_TEXT;			}						}				public function onExitMonitorScreen(){			try{			_fpp.stop();			}			catch(e:Error){				trace(e.toString());			}			if(_game.playerWins){								_game.onExitMonitorScreen();				_game.onEnterIslandFromADistanceScreen();			}			else{								_game.onExitMonitorScreen();				_game.onEnterGameScreen();			}					}		private function onDone(MouseEvent):void{						onExitMonitorScreen();								}													}		}