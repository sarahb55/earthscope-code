package earthscope.views{		import earthscope.controller.GameEngine;import earthscope.utils.AlertBox;import earthscope.models.VolcanoData;import earthscope.events.VolcanoEruptsEvent;import earthscope.utils.SeismoGraph;import earthscope.utils.GPSMonitor;import earthscope.utils.GameButton;import earthscope.utils.GameButtonMayor;import earthscope.utils.DisplayGraphicsFiles;import earthscope.text.GameText;import earthscope.utils.SoundPlayer;import flash.events.MouseEvent;import earthscope.views.InstructionView;// Import the required transition classes.import fl.transitions.Tween;import fl.transitions.TweenEvent;import fl.transitions.easing.*;import flash.display.Sprite;		public class WelcomeScreenView  extends Sprite{		var welcomeBack:DisplayGraphicsFiles;	var _game:GameEngine;	private var _welcomeQuitBtn:GameButton;	private var _welcomeStartBtn:GameButtonMayor;	private var _player:SoundPlayer;	private var _lowerBorder:DisplayGraphicsFiles;	private var _instructions:GameButton;	private var _instructionView:InstructionView;	var fadeTween:Tween;	var _fadeBox:Sprite = new Sprite();		public function WelcomeScreenView(game:GameEngine){				var welcomeBack = new DisplayGraphicsFiles();		welcomeBack.loadFile(GameText.PICTURE_DIRECTORY + GameText.WELCOME_BACKGROUND);		addChild(welcomeBack);		welcomeBack.x = GameText.BACK_Y;		welcomeBack.y = GameText.BACK_X;				_instructionView = new InstructionView(this);				_welcomeStartBtn = new GameButtonMayor(420, 470, 165, 60,GameText.START_BTN);		_welcomeStartBtn.addEventListener(MouseEvent.CLICK, onClickExitWelcomeScreen);				_instructions = new GameButton(700, 485, 165, 60, "instructions");							_lowerBorder = new DisplayGraphicsFiles();		_lowerBorder.loadFile(GameText.PICTURE_DIRECTORY + GameText.LOWER_BORDER);		addChild(_lowerBorder);		_lowerBorder.y = GameText.LOWER_BORDER_Y;		_lowerBorder.x = GameText.LOWER_BORDER_X;				//_welcomeQuitBtn = new GameButton(420, 340, 165, 60,GameText.QUIT_BTN);		//_welcomeQuitBtn.addEventListener(MouseEvent.CLICK, onClickQuitWelcomeScreen);				addChild(_welcomeStartBtn);		addChild(_instructions);		//addChild(_welcomeQuitBtn);		//_player = new SoundPlayer();		_game = game;				_instructions.addEventListener(MouseEvent.CLICK, showInstructions);			}		private function showInstructions(e:MouseEvent){				_fadeBox = new Sprite();		addChild(_fadeBox);			with (_fadeBox.graphics) {                				beginFill(0x000000, 0.8);                drawRect(GameText.BACK_X, GameText.BACK_Y, stage.width - 100, stage.height - 175);                endFill();			}            		fadeTween = new Tween(_fadeBox, "alpha", Strong.easeIn, 0, 1, 1, true);		fadeTween.addEventListener(TweenEvent.MOTION_FINISH, motionFinishHandler);				_welcomeStartBtn.disabled = true;		_instructions.disabled = true;					}		function motionFinishHandler(event:TweenEvent):void{				addChild(_instructionView);			}		public function closeInstructions():void{				if(_instructionView.parent == this){			removeChild(_instructionView);		}		if(_fadeBox.parent == this){			removeChild(_fadeBox);		}			_welcomeStartBtn.disabled = false;		_instructions.disabled = false;	}		public function onEnterWelcomeScreen(){				//_player.loadSound(GameText.SOUNDS_FOLDER + GameText.ISLAND_MUSIC);		//_player.play();	}		public function onExitWelcomeScreen(){				//_player.stop();				if(_welcomeStartBtn.disabled == true)		{			return;		}		_game.onExitWelcomeScreen();		_game.onEnterDesignMayorScreen();			}		public function onClickQuitWelcomeScreen(e:MouseEvent):void{				//TO DO go to html page that links to game	}		public function onClickExitWelcomeScreen(e:MouseEvent):void{				onExitWelcomeScreen();	}}}